{# src/SR/BlogBundle/Resources/views/Comment/index.html.twig #}

	<div id="commentaire">
	<h2>Commentaires</h2>
		<ul class="nav nav-pills nav-stacked">
			{% if comments is empty %}
				<p>Aucun commentaire</p>
			
			{% else %}
				{% for comment in comments %}
					<li class="list-group-item">
						<span class="auteur_comment">{{ comment.user.username }} </span> <span class="postDate_comment">Le {{ comment.postDate|date("d/m/Y \\Ã  H:i") }} : </span> <br>
						<span>{{ comment.content|e }}</span>
						<a href="{{path('sr_blog_comment_delete',{'id':comment.id})}}">Supprimer</a>
					</li>
				{% endfor %}
			{% endif %}

		</ul>
	</div>      


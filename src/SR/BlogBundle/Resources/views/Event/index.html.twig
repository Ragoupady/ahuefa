{# src/SR/BlogBundle/Resources/views/Event/index.html.twig #}
{% extends "SRBlogBundle::layout.html.twig" %}

{% block body %}
          <h2> Nos évenements</h2>
         
<ul>

  {% if listEvent is empty %}
    <p>Aucun événement</p>
  {% else %}

  	{%for event in listEvent%}
  	<li><a href= "{{path('sr_blog_evenement_view',{'id': event.id})}}">{{event.title}}</a></li>
  	{%endfor%}

  {% endif %}


</ul>

<ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('sr_blog_evenement', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>

<a href="{{path('sr_blog_evenement_add')}}">Ajouter</a>
{% endblock %}
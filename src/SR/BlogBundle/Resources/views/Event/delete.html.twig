{# src/SR/BlogBundle/Resources/views/Event/delete.html.twig #}
{% extends "SRBlogBundle::layout.html.twig" %}

{% block body %}


  <h2>Supprimer un évenement</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'évenement "{{ event.title }}" ?
  </p>

  {# On met l'id de l'évenement dans la route de l'action du formulaire #}
  
  <form action="{{ path('sr_blog_evenement_delete', {'id': event.id}) }}" method="post">
    <a href="{{ path('sr_blog_evenement_view', {'id': event.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'évenement
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}
<ul class="nav nav-pills nav-stacked">

	{% if listNews is empty %}
        <p>Aucun article</p></br>
    {% endif %}

	{% for news in listNews %}
	    <li class="last_news">
	      <a href="{{ path('sr_blog_article_view', {'id': news.id}) }}">
	        {{ news.title }}
	      </a>
	    </li>
	{% endfor %}
</ul>
{# src/SR/BlogBundle/Resources/views/News/delete.html.twig #}
{% extends "SRBlogBundle::layout.html.twig" %}

{% block body %}


  <h2>Supprimer un article</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'annonce "{{ news.title }}" ?
  </p>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  
  <form action="{{ path('sr_blog_article_delete', {'slug': news.slug}) }}" method="post">
    <a href="{{ path('sr_blog_article_view', {'slug': news.slug}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}